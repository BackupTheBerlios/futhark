switch i e = i until e && lift2 switch (pres e) (futr e);

of f a = f a;

id x = x;

if c l r = (c && [l] || [r]) ! 0;

imp s = s until lift0 null;

local = 0 until lift2 (\t t0 -> t - t0) (futr time) (pres time);

step i e = i until e && lift2 step b (futr b);

then b f = b and lift1 f (pres b);

